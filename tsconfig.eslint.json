{
    // extend your base config to share compilerOptions, etc
    // "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "outDir": "dist",
        "rootDir": "./",
        "composite": true,
        "declarationMap": true
    },
    "include": ["packages/**/src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
